@model PresentationLayer2.Models.ProgramAndMachineViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4></h4>

@if (TempData["MachineAdded"] != null)
{
    <div class="alert alert-success">
        <strong> Succes! </strong>  @TempData["MachineAdded"]
    </div>
}
@if (TempData["MachineRemoved"] != null)
{
    <div class="alert alert-success">
        <strong> Succes! </strong>  @TempData["MachineRemoved"]
    </div>
}

<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.program.Programname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.program.Programname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.program.Programdescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.program.Programdescription)
        </dd>
    </dl>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="program.ProgramMachineID" />
            <div class="form-group">
                @Html.DropDownListFor(Model => Model.machine.Machinename, new SelectList(ViewBag.machines))
                <label asp-for="machine.Machinename" class="control-label"></label>
                @*<input asp-for="Usertype" class="form-control" />*@
                <span asp-validation-for="machine.Machinename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" name="button" value="Add" class="btn btn-primary" />
                <input type="submit" name="button" value="Remove" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<p>

</p>
<p>All machines in this program</p>
<p>

</p>

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                MachineType
            </th>
            <th>
                MachineName
            </th>
            <th>
                MachineDescription
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.machines)
        {
            <tr>
                <td>
                    @Html.DisplayFor(Modelitem => item.Machinetype)
                </td>
                <td>
                    @Html.DisplayFor(Modelitem => item.Machinename)
                </td>
                <td>
                    @Html.DisplayFor(Modelitem => item.Machinedescription)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>

