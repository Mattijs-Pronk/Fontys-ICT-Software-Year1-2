@model PresentationLayer2.Models.MachineViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Machine</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" autocomplete="on">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MachineId" />
            <div class="form-group">
                @Html.DropDownListFor(Model => Model.Machinetype, new SelectList(ViewBag.machinetype))
                <label asp-for="Machinetype" class="control-label"></label>
                @*<input asp-for="Machinetype" class="form-control" />*@
                <span asp-validation-for="Machinetype" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Machinename" class="control-label"></label>
                <input asp-for="Machinename" class="form-control" />
                <span asp-validation-for="Machinename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Machinedescription" class="control-label"></label>
                <input asp-for="Machinedescription" class="form-control" />
                <span asp-validation-for="Machinedescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
