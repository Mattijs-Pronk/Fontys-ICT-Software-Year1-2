@model IEnumerable<PresentationLayer2.Models.TimeslotViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timeslots)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currentreservations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Maxreservations)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timeslots)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currentreservations)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Maxreservations)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TimeslotID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TimeslotID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TimeslotID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
